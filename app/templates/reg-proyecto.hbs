
	<div class="row">
		<nav>
			<div class="nav-wrapper blue lighten-2">
			  <a href="#" class="brand-logo center"><h5>Registro de proyectos</h5></a>
			</div>
		</nav>
	</div>

    <div class="container s8 offset-s2">
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">build</i>
                        {{input value=model.proyecto.nombre id="pname" type="text" class="validate"}}
                        <label for="pname" data-error="Demasiados caracteres" data-success="Correcto">Identificador</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mode_edit</i>
                        {{textarea value=model.proyecto.descripcion class="materialize-textarea" }}
                        <label for="icon_prefix2" data-error="Demasiados caracteres">Descripción</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">attach_money</i>
                        {{input value=model.proyecto.costo type="text" class="validate"}}
                        <label for="icon_prefix">Costo</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s4 offset-s8">
                        <button {{action 'saveProyecto' model.proyecto}}class="btn grey darken-1">Añadir Proyecto
                            <i class="material-icons right">add_circle_outline</i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col s2">
                <h6>Proyectos registrados:</h6>
            </div>
            <div class="col s10">
                <ul class="collection">
                    {{#each model.proyectos as |proyecto|}}
                      {{#if proyecto.nombre}}
                      <li class="collection-item">{{proyecto.nombre}}
                        <button {{action 'modalProyecto' proyecto}} class="waves-effect waves-light btn modal-trigger right">Mostrar</button>
                      </li>
                      {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
 
  {{#m-wrapper query=".modal" method="modal"}}
    <div id="modal1" class="modal bottom-sheet">
      {{proyecto-info proyecto=selectedProyecto}}
    </div>
  {{/m-wrapper}}



    {{#ember-wormhole to="footer"}}
    <div class="col l2 offset-l1">

        <button {{action 'criterio' model.proyecto}} class= "btn waves-effect waves-light grey darken-1" ><i class="material-icons right">arrow_back</i></button>
    </div>
    <div class="col l2 offset-l7">
        <button {{action 'asigValores' model.proyecto}} class= "btn waves-effect waves-light grey darken-1" ><i class="material-icons right">arrow_forward</i></button>
    </div>
    {{/ember-wormhole}}
