
	<div class="row">
		<nav>
			<div class="nav-wrapper blue lighten-2">
			  <a href="#" class="brand-logo center"><h5>Establecimiento de criterios</h5></a>
			</div>
		</nav>
	</div>

	<div class="row">
		<div class="container">
			<table class="striped">
				<thead>
					<tr>
						<th>Criterio</th>
						<th>Tipo</th>
						<th>Ponderación</th>
					</tr>
				</thead>

				<tbody>
          {{#each model as |criterio|}}
          <tr>

            <td> {{criterio.nombre}} </td>
            <td> {{if criterio.isCuantitativo 'Cuantitativo' 'Cualitativo'}} </td>
            <td> {{criterio.valor}} </td>
          </tr>

          {{/each}}
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="container">
			<button class="btn waves-effect waves-light cyan darken-4">
				<i class="material-icons right">add_circle</i>
                {{#link-to 'addCriterio'}} Añadir criterio {{/link-to}}
			</button>
		</div>
	</div>

	<footer class="page-footer blue lighten-1">
