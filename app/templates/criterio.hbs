
	<div class="row">
		<nav>
			<div class="nav-wrapper blue lighten-2">
			  <a href="#" class="brand-logo center"><h5>Establecimiento de criterios</h5></a>
			</div>
		</nav>
	</div>

	<div class="row">
		<div class="container">
      {{#if model}}
			<table class="striped">
				<thead>
					<tr>
						<th>Criterio</th>
						<th>Tipo</th>
						<th>Ponderación</th>
            <th style="width: 90px">Opciones</th>
					</tr>
				</thead>

				<tbody>
          {{#each model as |criterio|}}
          <tr>

            <td>{{criterio.nombre}}</td>
            <td> {{if criterio.isCuantitativo 'Cuantitativo' 'Cualitativo'}} </td>
            <td> {{input type="number" value=criterio.valor min=1 max=100}} </td>
            <td class="right">
              <button class="waves-effect waves-light btn" {{action 'deleteCriterio' criterio}}><i  class="material-icons">delete</i></button>

            </td>
          </tr>

          {{/each}}
          <tr>

          	<td></td>
          	<td></td>
          	<td style="color: {{unless canContinue 'red' (if canContinue 'green')}}">Total</td>
          	<td style="color: {{unless canContinue 'red' (if canContinue 'green')}}">{{porcentaje}}</td>
          </tr>
				</tbody>
			</table>
      {{else}}
      Aún no tenemos criterios registrados
      {{/if}}
		</div>
	</div>


	<div class="row">
		<div class="container">

 		<button class="left btn waves-effect waves-light grey darken-1" {{action "addCriterio" model}}><i class="material-icons right">add_circle</i> Añadir criterio</button>
 		<button disabled="{{unless canContinue  'true'}}" class="right btn waves-effect waves-light grey darken-1 " {{action "saveAndContinue" model}}><i class="material-icons right">add_circle</i> Añadir proyecto</button>


		</div>
	</div>

	{{#ember-wormhole to="footer"}}
    <div class="col l2 offset-l1">
        {{#link-to 'index' tagName="button" class= "btn waves-effect waves-light grey darken-1"}}<i class="material-icons right">arrow_back</i>{{/link-to}}
    </div>
    <div class="col l2 offset-l7">
        {{#link-to 'regProyecto' tagName="button" class= "btn waves-effect waves-light grey darken-1"}}<i class="material-icons right">arrow_forward</i>{{/link-to}}
    </div>
    {{/ember-wormhole}}

